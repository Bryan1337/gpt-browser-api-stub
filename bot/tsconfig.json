{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"checkJs": true,
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"outDir": "./build",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"extendedDiagnostics": false,
		"moduleResolution": "node",
		"downlevelIteration": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"noImplicitThis": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"declaration": false,
		"baseUrl": ".",
		"paths": {
            "@/*": ["src/*"],
        }
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts", "../api/scripts/message.ts",
	],
	"exclude": [
		"node_modules"
	]
}